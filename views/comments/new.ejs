<%- include ("../partials/header") %>

<div class="container text-center">
	<h1>
		Add Comment to <%= campground.name %>
	</h1>
	<form action="/campgrounds/<%= campground._id %>/comments" method="post">
		<div class="form-group row">
			<label for="text" class="col-sm-2 col-form-label">Comment:</label>
			<div class="col-sm-10">
		  		<input type="text" class="form-control" name="comment[text]" id="text" placeholder="write your comments here " required>
			</div>
  		</div>
		<div class="form-group row">
			<label for="author" class="col-sm-2 col-form-label">Author:</label>
			<div class="col-sm-10">
		  		<input type="text" class="form-control" name="comment[author]" id="author" placeholder="author" required>
			</div>
  		</div>
	<button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>
<%- include ("../partials/footer") %>
