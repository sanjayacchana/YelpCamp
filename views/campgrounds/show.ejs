<%- include ("../partials/header") %>
<div class="container show-conatiner">
	<div class="row">
		<div class="col-3">
			<p class="lead">
				YelpCamp
			</p>
			<div class="list-group">
				<li class="list-group-item active">Campground 1</li>
				<li class="list-group-item">Campground 2</li>
				<li class="list-group-item">Campground 3</li>
			</div>
		</div>
		<div class="col-9">
			<div class="img-thumbnail">
				<img class="img-fluid" src="<%= campground.image%>" class="figure-img img-fluid rounded"
				alt="This picture is about <%=campground.title%>">
				<div class="caption-full">
					<h4 class="float-right">$9.00/night</h4>
					<h4><a> <%= campground.name%> </a></h4>
					<p>
						<em>Submitted By: <%= campground.author.username%></em>
					</p>
					<p>
						<%= campground.description %>
					</p>
				</div>
			</div>
			
			<div class="card card-body bg-light">
				<div class="text-right">
					<a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Add New Comment</a>
				</div>
				<hr>
				<% campground.comments.forEach(function(comment){ %>
				<div class="row">
					<div class="col-12">
						<strong><%= comment.author.username %></strong> 
						<span class="float-right">10 days ago</span>
						<p><%= comment.text%></p>
					</div>
				</div>
				<% }); %>
			</div>
	</div>
</div>
<%- include ("../partials/footer") %>
