<%- include ("../partials/header") %>

<div class="container text-center">
	<h1>
		Add  New CampGround
	</h1>
	<form action="/campgrounds" method="post">
		<div class="form-group row">
			<label for="name" class="col-sm-2 col-form-label">Name</label>
			<div class="col-sm-10">
		  		<input type="text" class="form-control" name="campground[name]" id="name" placeholder="campground name" required>
			</div>
  		</div>
		<div class="form-group row">
			<label for="immage" class="col-sm-2 col-form-label">Image</label>
			<div class="col-sm-10">
		  		<input type="text" class="form-control" name="campground[image]" id="image" placeholder="Image URL" required>
			</div>
  		</div>
		<div class="form-group row">
			<label for="text-area" class="col-sm-2 col-form-label">Description</label>
			<div class="col-sm-10">
		  		<textarea 
				 class="form-control" name ="campground[description]" id="text-area" placeholder="campground content goes here" required></textarea>
			</div>
  		</div>
	<button type="submit" class="btn btn-primary">Submit</button>
	<a class="btn btn-info" href="/campgrounds">Go Back</a>

</form>
</div>



<%- include ("../partials/footer") %>
