<%- include ("../partials/header") %>

<div class="container text-center">
	<h1>
		Edit  <%= campground.name%>
	</h1>
	<form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
		<div class="form-group row">
			<label for="name" class="col-sm-2 col-form-label">Name</label>
			<div class="col-sm-10">
		  		<input type="text" class="form-control" name="campground[name]" id="name" value= "<%=campground.name%>"required>
			</div>
  		</div>
		<div class="form-group row">
			<label for="immage" class="col-sm-2 col-form-label">Image</label>
			<div class="col-sm-10">
		  		<input type="text" class="form-control" name="campground[image]" id="image" value="<%=campground.image%>" required>
			</div>
  		</div>
		<div class="form-group row">
			<label for="text-area" class="col-sm-2 col-form-label">Description</label>
			<div class="col-sm-10">
		  		<textarea 
				 class="form-control" name ="campground[description]" id="text-area"  required><%= campground.description%></textarea>
			</div>
  		</div>
	<button type="submit" class="btn btn-primary">Submit</button>
	<a class="btn btn-info" href="/campgrounds">Go Back</a>

</form>
</div>
<%- include ("../partials/footer") %>
